$(document).ready ->
  #/////////////////////////////////////////////////////////////////////////////
  # JavaScript for CONTROLLER: guide, global
  #/////////////////////////////////////////////////////////////////////////////

  if $('body').hasClass('guide')
    #///////////////////////////////////////////////////////////////////////////
    # JavaScript for CONTROLLER: guide, ACTION: home
    #///////////////////////////////////////////////////////////////////////////

    if $('body').hasClass('home')
      #//////////////////
      # Helper functions
      #//////////////////

      selectText = ->
        @select()
        return


      #//////////////////
      # Setup
      #//////////////////

      regUrlBox = document.querySelector('input.form-control')


      #//////////////////
      # Event watchers
      #//////////////////

      regUrlBox.onclick = selectText
  return
